<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%=strip_tags(@product.description) %>
</p>

<p>
  <b>Image url:</b>
  <%= @product.image_url %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>
<p>

	<b>Rating:</b>
	<%= average_rating(@product.id) %>
</p>	
<p>

	<b>Reviews:</b>
	<% child(@product.id).each do |f| %>  
	<p><%= f.review%></p>     <p>"posted by "<%=  temp(f.user_id)%></p>
	<% end %>
    	
</p>	


<%= link_to 'Edit', edit_product_path(@product) %> |

<%= link_to 'Back', products_path %>
